{
  "name": "iobroker.wiim",
  "version": "0.0.2",
  "description": "adapter to access Wiim/Arylic devices",
  "author": {
    "name": "KaiIOB",
    "email": "Kaibrendel@kabelmail.de"
  },
  "homepage": "https://github.com/KaiIOB/ioBroker.wiim",
  "license": "MIT",
  "keywords": [
    "Wiim",
    "streamer",
    "pro",
    "amp",
    "Arylic",
    "ioBroker"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/KaiIOB/ioBroker.wiim.git"
  },
  "engines": {
    "node": ">= 18"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^3.2.3"
  },
  "devDependencies": {
    "@iobroker/adapter-dev": "^1.3.0",
    "@iobroker/testing": "^5.0.3",
    "@tsconfig/node14": "^14.1.2",
    "@types/chai-as-promised": "^7.1.8",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "^14.18.63",
    "@types/proxyquire": "^1.3.31",
    "@types/sinon": "^17.0.3",
    "@types/sinon-chai": "^3.2.12",
    "chai-as-promised": "^7.1.2",
    "chai": "^4.5.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint": "^8.57.1",
    "mocha": "^11.1.0",
    "nyc": "^17.1.0",
    "prettier": "^3.4.2",
    "proxyquire": "^2.1.3",
    "sinon": "^19.0.2",
    "sinon-chai": "^3.7.0",
    "typescript": "~5.7.3"
  },
  "main": "wiim.js",
  "files": [
    "admin{,/!(src)/**}/!(tsconfig|tsconfig.*|.eslintrc).{json,json5}",
    "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
    "lib/",
    "www/",
    "io-package.json",
    "LICENSE",
    "wiim.js"
  ],
  "scripts": {
    "test:js": "mocha --config test/mocharc.custom.json \"{!(node_modules|test)/**/*.test.js,*.test.js,test/**/test!(PackageFiles|Startup).js}\"",
    "test:package": "mocha test/package --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:js && npm run test:package",
    "check": "tsc --noEmit -p tsconfig.check.json",
    "coverage": "nyc npm run test:ts",
    "lint": "eslint .",
    "translate": "translate-adapter"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.test.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "bugs": {
    "url": "https://github.com/KaiIOB/ioBroker.wiim/issues"
  },
  "readmeFilename": "README.md"
}
